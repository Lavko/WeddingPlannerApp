{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "module": "ESNext",
    "target": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "lib": ["es2017", "dom", "es6"],
    "baseUrl": ".",
    "paths": { "@core/*": ["src/app/core/*"], "@web/*": ["src/app/web/*"], "@mobile/*": ["src/app/mobile/*"] }
  },
  "include": ["src/**/*.ts", "src/*"]
}
